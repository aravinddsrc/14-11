</body>
<script>
    $(document).ready(function () {
        $(function () {
            $(".modal-body select").select2({
                minimumResultsForSearch: -1
            });
        });

        $('#StopName').keypress(function (e) {
            var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
            if (regex.test(str)) {

                return true;
            }
            return false;
        });
    });
    function Cancel() {
        window.location.href = '@Url.Action("ManageStops", "Stops")';
    }
    function SaveDetails() {
        debugger;
        if (document.getElementById('StopName').value == 0 ) {
            document.getElementById("span_ID1").innerHTML = "Enter the Location(Stop Name)";
        }
        else {
            document.getElementById("span_ID1").innerHTML = "";
            var values = {
                "Stop_Name": $("#StopName").val(),
                "StopId": $('#StopId').val(),
                         }
            var opts =   {
                            "closeButton": true,
                            "debug": false,
                            "positionClass": "toast-top-right",
                            "toastClass": "White",
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "2000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
            $.ajax({
                url: "../../Stops/EditStops/",
                type: 'POST',
                cache: false,
                data: values,
                traditional: true,
                global: false,
                success: function (result) {
                    if (result== "Success") {
                        $("#portlet-config").modal('hide');
                        toastr.success("Stops edited successfully", opts);
                        window.location.href = '@Url.Action("ManageStops", "Stops")';   
                    }
                    else {
                       // $("#portlet-config").modal('hide');
                        toastr.warning("Stops Name already exists", opts);
                    }
                }
            });
        }
    }

    var myCenter;
    function Search() {
        debugger;
        var address = $("#StopName").val();
        var lo, la;
        var geocoder = new google.maps.Geocoder();
        geocoder.geocode({ 'address': address }, function (results, status) {
            var location = results[0].geometry.location;
            la = location.lat();
            lo = location.lng();
            myCenter = new google.maps.LatLng(la, lo);
            initialize();
            google.maps.event.addDomListener(window, 'load', initialize);
        });
    }

    function initialize() {
        var mapProp = {
            center: myCenter,
            zoom: 15,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
        var marker = new google.maps.Marker({
            position: myCenter,
        });
        marker.setMap(map);
    }

</script>