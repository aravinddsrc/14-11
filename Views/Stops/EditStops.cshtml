                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Stop Id")
                                    @Html.TextBoxFor(x => x.StopId, new { @id="StopId", @name="StopId", @class="form-control", @disabled="true" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Location(Stop Name)")
                                    @Html.Label("*", new { @style = "color:#FF0000" })    
                                    @Html.TextBoxFor(x => x.Stop_Name, new { @id = "StopName", @name = "Stop Name", @class = "form-control", @autocomplete = "off", @maxlength = "100", @onkeydown="if (event.keyCode == 13) {Search()}" })
                                    <span id="span_ID1" style="color: Red;"></span>
                                </div>
                                <div class="form-group" style="margin-left:330px">
                                    <button type="reset" id="btnAdd" class="btn btn-default" data-dismiss="modal" onclick="Cancel()"> Cancel </button>
                                    <button id="btnSave" type="button" style="margin-right: -10px"  class="btn btn-info" onclick="SaveDetails()"> Save </button>
                                </div>
                            </div>
                            <div class="col-md-5" style="margin-left: 0px;" >
                                <div class="form-group">
                                    <div id="googleMap" style="width: 300px; height: 300px;"></div>
                                </div> 
                            </div>
                        </div>
                    </div>
            </div>
        </div> 
    </div>
</div>
