@model IEnumerable<DSRCManagementSystem.Models.Manage>
@{
    ViewBag.Title = "View Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section AddToHead
{
    <style>
        .abc {
            background-color: #ffb3b3;
        }
    </style>
