@section scripts
{
    <script src="../../Content/Template/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="../../Content/Template/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script type="text/javascript">

        jQuery(document).ready(function ($) {
            $("#tblCmptr").dataTable({
                "sPaginationType": "bootstrap",
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": false,
                "bAutoWidth": false,
                "columnDefs": [{ bSortable: false, 'aTargets': [4] }, { bSortable: false, 'aTargets': [5]}]
            });
            $(".dataTables_wrapper select").select2({
                minimumResultsForSearch: -1
            });
            $('thead>tr>th').css('text-align', 'center');
        });

        function AddNew() {
            $.ajax({ url: "../../ManageServer/AddNew/",
                type: 'GET', cache: false,
                success: function (result) {
                    $('#PartialSection').html(result);
                    $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });
                }
            });
        }

        function Back2() {
            var url = '../Home/Index?id=AssetManagement';
            window.location.href = url;
        }


        function Edit(ID) {
            //alert("tesr");
            $.ajax({ url: "../../ManageServer/EditServer/" + ID,
                type: 'GET', cache: false,
                //data: { ID: ID },
                success: function (result) {
                    //alert(result);

                    $('#PartialSection').html(result);
                    $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });

                }
            });
        }


        function Delete(ID) {
            bootbox.confirm("Are you sure want to delete ?", function (conform) {
                if (conform) {
                    $.ajax({ url: "../ManageServer/Delete/",
                        type: 'POST', cache: false, data: { ID: ID },
                        success: function (result) {
                            var opts = {
                                "closeButton": true,
                                "debug": false,
                                "positionClass": "toast-top-right",
                                "onclick": null,
                                "showDuration": "500",
                                "hideDuration": "1000",
                                "timeOut": "1500",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            };
                            toastr.success("Server detail has been deleted successfully", opts);
                            setTimeout(function () { location.reload(); }, 1000);

                        }
                    });
                }
            });
        }
       
    
</script>
