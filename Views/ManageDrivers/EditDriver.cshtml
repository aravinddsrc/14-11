                        document.getElementById("fileid").innerHTML = "Choose Document Proof File";
                        submitForm = false;
                     }
                     else
                     {
                        document.getElementById("fileid").innerHTML = "";                         
                     }              
        
        return submitForm;             
            
        }

    </script>
