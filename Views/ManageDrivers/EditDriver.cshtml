    <script type="text/javascript">

        $("#gender").select2();
        $("#bloodgroup").select2();
        $("#drivertype").select2();

      $(".datetimepicker").datepicker({
            format: 'dd-mm-yyyy',
            todayHighlight: true,
            orientation: 'auto top',
            autoclose: true,

        }).on('hide', function () {
            if (!this.firstHide) {
                if (!$(this).is(":focus")) {
                    this.firstHide = true;
                    // this will inadvertently call show (we're trying to hide!)
                    this.focus();
                }
            } else {
                this.firstHide = false;
            }
        }).on('show', function () {
            if (this.firstHide) {
                // careful, we have an infinite loop!
                $(this).datepicker('hide');
            }
        });


        function edit() 
       
        { 
        
           var emailfilter = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
         var submitForm = true;
         var FirstName = $("#firstname").val();
        var FirstNametrim = FirstName.replace(/\s/g, "").length;
        var LastName = $("#lastname").val();
        var LastNametrim = LastName.replace(/\s/g, "").length;
         var DOB = $("#dob").val();
         var drivinglicensenumber = $("#drivinglicensenumber").val();
         var drivinglicensenumbertrim = drivinglicensenumber.replace(/\s/g, "").length;
         var drivinglicenseexpiry = $("#drivinglicenseexpiry").val();
         var Empid = $("#emailid").val();
         var EmpidTrim = Empid.replace(/\s/g, "").length;
         var contactnumber = $("#contactnumber").val();
         var contactnumbertrim = contactnumber.replace(/\s/g, "").length;
         var bloodgroup = $("#bloodgroup").val();
         var driverbatchno = $("#driverbatchno").val();
         var driverbatchnotrim = driverbatchno.replace(/\s/g, "").length;
          var drivertype = $("#drivertype").val();
         var documents = $("#file").val();
       
       
        
                    if (FirstName== '' || FirstNametrim=='' ) 
                    {
                         document.getElementById("fnameid").innerHTML = "Enter valid name";
                         submitForm = false;
                     }
                     else 
                     {
                      document.getElementById("fnameid").innerHTML = "";
                     }

                     if(DOB == '')
                     {
                        document.getElementById("dobid").innerHTML = "Enter valid DOB";
                        submitForm = false;
                     }
                     else 
                     {
                        document.getElementById("dobid").innerHTML = "";
                     }

                     if(drivinglicensenumber == '' ||drivinglicensenumbertrim =='')
                     {
                        document.getElementById("drivinglicensenumberid").innerHTML = "Enter valid Driving License Number";
                        submitForm = false;
                     }
                     else if (isNaN(drivinglicensenumber)|| isNaN(drivinglicensenumbertrim))
                     {
                     document.getElementById("drivinglicensenumberid").innerHTML = "Enter valid Driving License Number";
                     submitForm = false;
                     }
                      else 
                      {
                      document.getElementById("drivinglicensenumberid").innerHTML = "";
                      }

                      if(drivinglicenseexpiry == '' )
                     {
                        document.getElementById("drivinglicenseexpiryid").innerHTML = "Enter valid Driving License Expiry date";
                        submitForm = false;
                     }
                     else 
                     {
                     document.getElementById("drivinglicenseexpiryid").innerHTML = "";
                     }

                     if(Empid == '' ||EmpidTrim =='' || !emailfilter.test(Empid))
                     {
                        document.getElementById("emailidid").innerHTML = "Enter valid Email ID";
                        submitForm = false;
                     }
                     else 
                     {
                        document.getElementById("emailidid").innerHTML = "";
                     }
                     if(contactnumber == '' ||contactnumbertrim =='')
                     {
                        document.getElementById("contactnumberid").innerHTML = "Enter valid contact no";
                        submitForm = false;
                     }
                     else if (isNaN(contactnumber)|| isNaN(contactnumbertrim))
                     {
                        document.getElementById("contactnumberid").innerHTML = "Enter valid contact no";
                        submitForm = false;
                     }
                      else if(contactnumbertrim > 10 || contactnumbertrim < 10)
                     {
                        document.getElementById("contactnumberid").innerHTML = "Enter valid contact no";
                        submitForm = false;
                     }
                     else 
                     {
                        document.getElementById("contactnumberid").innerHTML = "";
                     }
                     if(bloodgroup == '')
                     {
                        document.getElementById("bloodgroupid").innerHTML = "Select Blood Group";
                        submitForm = false;
                     }
                     else 
                     {
                        document.getElementById("bloodgroupid").innerHTML = "";
                     }
                     if(driverbatchno == '' || driverbatchnotrim == '')
                     {
                        document.getElementById("driverbatchnoid").innerHTML = "Enter Valid Driver Batch No";
                        submitForm = false;
                     }
                      else if (isNaN(driverbatchno)|| isNaN(driverbatchnotrim))
                      {
                      document.getElementById("driverbatchnoid").innerHTML = "Enter Valid Driver Batch No";
                      submitForm = false;
                      }
                      else 
                      {
                      document.getElementById("driverbatchnoid").innerHTML = "";
                      }

                      if(drivertype == '')
                      {
                      document.getElementById("drivertype").innerHTML = "Select Driver Type";
                      submitForm = false;
                      }
                      else{
                        document.getElementById("drivertypeid").innerHTML = "";   
                      }

                      if(documents == '')
