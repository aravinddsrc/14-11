@model  IEnumerable<DSRCManagementSystem.Models.OnDutyRequestModel>
@{
    ViewBag.Title = "Out Of Office Request";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    int RequestID = 1;
}

 <style>
        .dropdown-menu {
    background-color: white;
}
        </style>

