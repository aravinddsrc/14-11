@section scripts
 {
    <script src="../../Content/Template/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="../../Content/Template/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script type="text/javascript">

        jQuery(document).ready(function ($) {

            $("#tblUsers").dataTable({
                "sPaginationType": "bootstrap",
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": false,
                "bAutoWidth": false,
                "aaSorting": [],
                "columnDefs": [{ "width": "20%", "targets": 1 },{ bSortable: false, 'aTargets': [6] }, { bSortable: false, 'aTargets': [7] }]
            });

            $(".panel-body select").select2({
                //minimumResultsForSearch: -1
            });

            $('thead>tr>th').css('text-align', 'center');
        })

      var toastrOptions = {
                        "closeButton": true,
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "toastClass": "White",
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    };

                    function ApproveOnDutyRequest(odid) {
                        $.ajax({
                            url: "../../OOOnDuty/ApproveOnDutyRequest/",
                            type: 'GET',
                            cache: false,
                            data: { ODID: odid },
                            success: function (result) {


                                $('#PartialSection').html(result);
                                $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });


                            }
                        });
                }

                function RejectOnDutyRequest(odid) {
                    
                            $.ajax({
                                url: "../../OOOnDuty/RejectOnDutyRequest/",
                                type: 'GET',
                                cache: false,
                                data: { ODID: odid },
                                success: function (result) {


                                    $('#PartialSection').html(result);
                                    $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });


                                }
                            });
                        }

                function View(odid) {
                    $.ajax({ url: "../../OOOnDuty/ViewDetail/",
                        type: 'GET', cache: false,
                        data: { ODID: odid },
                        success: function (result) {
                            $('#PartialSection').html(result);
                            $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });
                        }
                    });
                }

                function Clear() {

                    $.ajax({ url: "../../OOOnDuty/WorkList/",
                        type: 'GET',
                        cache: false,
                        success: function (result) {

                            location.href = '@Url.Action("WorkList", "OOOnDuty")';

                        }                       
                    });

                }         
        
     </script>
  }
 
