        <h3 class="form-title">
            Change Password Here</h3>
             @using (Html.BeginForm("ChangePasswordUsingGUIID", "User", FormMethod.Post))
             {
            <form class="" action="index.html" method="post" novalidate="novalidate">
            
          @*  <p>
               Enter User Name Here 
            </p>*@
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">
                    Key</label>
                <div class="controls">
                    <div class="input-icon">
                        <i class="fa fa-key"></i>
                       @* @Html.TextBoxFor(o => o.Email, new { @class = "form-control placeholder-no-fix", @autocomplete = "off", @placeholder ="User Name" })*@
                       @* @Html.ValidationMessageFor(o => o.Key, "", new { @style = "color:red;font-weight:bold;" })*@
                        @Html.HiddenFor(o => o.UserId)
                        @Html.HiddenFor(o => o.Key)
                        @*<input class="form-control placeholder-no-fix" type="password" autocomplete="off"
                            placeholder="Enter Key" name="rpassword">*@
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">
                   New Password
                </label>
                <div class="controls">
                    <div class="input-icon">
                        <i class="fa fa-circle"></i>
                          @Html.HiddenFor(o => o.PasswordKey)
                          @Html.HiddenFor(o => o.ResetPasswordKey)
                          @Html.TextBoxFor(o => o.NewPassword, new {@id="NewPassword", @class = "form-control placeholder-no-fix", @autocomplete = "off", @placeholder = "New Password", type = "password" })
                          @Html.ValidationMessageFor(o=>o.NewPassword,"", new { @style = "color:red;font-weight:bold;" })
                       @* <input class="form-control placeholder-no-fix" type="password" autocomplete="off"
                            placeholder="New Password" name="rpassword">
*@                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">
                  Confirm Password
                </label>
                <div class="controls">
                    <div class="input-icon">
                        <i class="fa fa-circle"></i>

                         @Html.TextBoxFor(o => o.ReEnterPassword, new {@id="ConfirmPassword", @class = "form-control placeholder-no-fix", @autocomplete = "off", @placeholder = "Confirm Password", type = "password" })
                         @Html.ValidationMessageFor(o=>o.ReEnterPassword,"", new { @style = "color:red;font-weight:bold;" })
                        @*<input class="form-control placeholder-no-fix" type="password" autocomplete="off"
                            placeholder="Confirm Password" name="rpassword">*@
                    </div>
                </div>
            </div>
            <div class="form-actions">
               <button type="button" id="back-btn-reset" class="btn" onclick="location.href='@Url.Action("Login", "User")'">
                    <i class="m-icon-swapleft"></i>Back
                </button>
                <button type="submit" id="Submit" class="btn green pull-right">
                    Submit <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
            </form>
      
             }
        
