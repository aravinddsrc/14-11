@model IEnumerable<DSRCManagementSystem.Models.Assets>
@{
    Layout = null;
    ViewBag.Title = "Hardware Details";
}

@{
    int SNo = 1;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HardwareDetails</title>
    <style>
        th
        {
             font-weight: bold;
             text-align: center;
        }
    </style>
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: #f0f0f1;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h4 class="modal-title">
                Hardware Details</h4>
             
        </div>
        <div class="modal-body">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered datatable" id="tblUsers">
                <thead>
                    <tr>
                        <th>
                         S.No
                        </th>
                        @*<th>
                            @Html.Label("EmpId")
                        </th>*@
                        <th>
                            @Html.Label("Hardware Name")
                        </th>  
                        <th style="text-align:center">
                            @Html.Label("Computer Name")
                        </th>  
                      <th>
                          @Html.Label("Status")
                      </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:30px;">
                            @(SNo++)
                        </td>
                        <td style="width:30px;">
                         @Html.DisplayFor(x => item.Hardwarename)
                        </td>
                         <td style="width:30px;">
                         @Html.DisplayFor(x => item.AssignedTo)
                        </td>
                        <td style="width:30px;">
                            @Html.DisplayFor(x => item.Status)
                        </td>
                    </tr>
                }
            </table>
            }
            else
            {
                <div style="text-align: center">
                    <h4>
                        No Data Found</h4>
                </div>
                   
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Close</button>
        </div>
    </div>
</body>
</html>

