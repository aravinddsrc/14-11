@model DSRCManagementSystem.Models.AddVehicle
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add New Vehicle</title>
    <link href="../../Content/Template/js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css"
        rel="stylesheet" type="text/css" />
    <link href="../../Content/Template/css/font-icons/entypo/css/entypo.css" rel="stylesheet"
        type="text/css" />
    <link href="../../Content/Template/css/font-icons/entypo/css/animation.css" rel="stylesheet"
        type="text/css" />

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic"
        id="style-resource-4" />
    @*<link href="../../Content/Template/css/neon.css" rel="stylesheet" type="text/css" />*@
    <link href="../../Content/Template/css/custom.css" rel="stylesheet" type="text/css" />
    @*<script src="../../Content/Plugins/bootstrap-datetimepicker/js/en-gb.js" type="text/javascript"></script>*@
    <script src="../../Content/Plugins/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
    @*   <script src="../../Content/Plugins/bootstrap-datetimepicker/js/bootstrap-datepicker.js"
        type="text/javascript"></script>*@
    @*    <link href="../../Content/Plugins/bootstrap-datetimepicker/css/bootstrap-datepicker.css"
        rel="stylesheet" type="text/css" />*@
    <script src="../../Content/Plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"
        type="text/javascript"></script>
    <link href="../../Content/Plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css"
        rel="stylesheet" type="text/css" />

    <style>
       .dropdown-menu {
    background-color: white;
}        
 </style> 
    
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: #f0f0f1;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                x</button>
            <h4 class="modal-title">Add Vehicle</h4>
        </div>

        <div class="modal-body">

            @using (Html.BeginForm("Transportation", "AddVehicle", FormMethod.Post))
            {
                 <div class="row">
                    <div class="col-md-12" style="text-align: right">
                        @Html.Label("*", new { @style = "color:#FF0000" }) Required field(s)
                        
                    </div>
                </div>    
                               
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Vehicle No",new { @class = "control-label" })     
                             @*@Html.Label("*", new { @style = "color:red;font-weight:;" })*@                  
                             @Html.TextBoxFor(x => x.Vehicle_No, new { @name = "vName", @id = "vName", @class = "form-control", @style = "height:42px" })
                            <span id="s1" style="color: Red;"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("VehicleType",new { @class = "control-label" })   
                             @Html.Label("*", new { @style = "color:red;font-weight:;" })                    
                              @Html.DropDownList("Typeid", ViewBag.VehicleType as SelectList,"--Select--", new { @id = "type", @class = "form-control" })
                            <span id="s2" style="color: Red;"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Contact_No",new {@class = "control-label" })                       
                            @* @Html.TextBoxFor(x => x.Contact_No, new { @name = "contact", @id = "contact", @class = "form-control",@maxlength = 10})*@
                              @Html.TextBoxFor(x => x.Contact_No, new
                           {
                               @id = "Idcontactno",
                               @name = "ContactNo",
                               @class = "form-control",
                               @placeholder = Resources.Resource.DN_ProfileModel_ContactNo,
                               @autocomplete = "off",
                               @maxlength = 10,
                               @Style = "height: 43px;",

                           })
                            <span id="s3" style="color: Red;"></span>
                        </div>
                    </div>

                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Remarks",new { @class = "control-label" })                       
                             @Html.TextAreaFor(x => x.Remarks, new { @name = "mark", @id = "mark", @class = "form-control" })
                            <span id="s4" style="color: Red;"></span>
                        </div>
                    </div>                     
                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Vehicle Brand",new { @class = "control-label" })  
                             @Html.Label("*", new { @style = "color:red;font-weight:;" })                     
                            @Html.DropDownList("BrandId", ViewBag.VehicleBrand as SelectList,"--Select--" ,new { @id = "Brand", @class = "form-control" })
                            <span id="s5" style="color: Red;"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Vehicle Model",new { @class = "control-label" })  
                             @Html.Label("*", new { @style = "color:red;font-weight:;" })                     
                           @Html.DropDownList("ModelId", ViewBag.VehicleModel as SelectList,"--Select--", new { @id = "model", @class = "form-control" })
                            <span id="s6" style="color: Red;"></span>
                        </div>
                    </div>
                      <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Vehicle Make",new { @class = "control-label" }) 
                             @Html.Label("*", new { @style = "color:red;font-weight:;" })                      
                           @Html.TextBoxFor(x => x.VehicleMake, new { @name = "make", @id = "make", @class = "form-control",@style = "height:42px"})
                            <span id="s11" style="color: Red;"></span>
                        </div>
                    </div>
                       <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("ManufacturingYear",new { @class = "control-label" })  
                             @Html.Label("*", new { @style = "color:red;font-weight:;" })                     
                             @*@Html.TextBoxFor(x => x.Model_Year, new { @name = "year", @id = "year", @class = "form-control ", @style = "Width:200Px;Height:30px"})*@
                            @Html.DropDownList("Years",ViewBag.GetYears as MultiSelectList,"--Select--", new
                           {
                               @id = "Year",
                               @name = "Year",
                               @class = "form-control"
                           })
                            @Html.ValidationMessageFor(model=>model.Model_Year)
                            <span id="s7" style="color: Red;"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("No of Seats",new { @class = "control-label" })   
                             @Html.Label("*", new { @style = "color:red;font-weight:;" })                    
                             @Html.TextBoxFor(x => x.No_of_Seat, new { @name = "seat", @id = "seat",@style = "height:42px", @class = "form-control",@type="number",@min=1,@max=30})
                            <span id="s8" style="color: Red;"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("No fo trip",new { @class = "control-label" })                       
                             @Html.TextBoxFor(x => x.Trip, new { @name = "trip", @id = "trip",@style = "height:42px", @class = "form-control",@type="number",@min=1,@max=30})
                            <span id="s9" style="color: Red;"></span>
                        </div>
                    </div>
                       <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("Photos") 
                              <input type="file" name="Photo" id="file" accept=".gif,.jpg,.jpeg,.png" style="width: 100%" />                      
                            @* @Html.TextBoxFor(x => x.Remarks, new { @name = "mark", @id = "mark", @class = "form-control", @maxlength = 200 })*@
                           
                            <span id="s10" style="color: Red;"></span>
                        </div>
                    </div>
                      
                             </div>           
                                              
            }
            </div>
        

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Cancel
            </button>
            <button type="button" id="btnAdd" class="btn btn-info" onclick='Save()'>
                Save
            </button>
        </div>
    </div>

        <div class="modal fade in" id="portlet-config1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="tools">
                <div id="PartialSection">
                    <div id="LoaderContent" style="height: 100%;">
                        <img src="../../Content/Template/images/finalloader.GIF" style="margin-left: 43%; margin-top: 40%;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
  

  <script src="../../Content/Template/js/select2/select2.min.js" type="text/javascript"></script>   
            <script src="../../Content/JS/ToasterAlert.js" type="text/javascript"></script>
          <script type="text/javascript">
              $("#type").select2();
              $("#Brand").select2();
              $("#model").select2();
              $("#Year").select2();
            

              //function onFileSelected(event) {

              //    var selectedFile = event.target.files[0];
              //    var reader = new FileReader();

              //    var imgtag = document.getElementById("myimage");
              //    imgtag.title = selectedFile.name;

              //    reader.onload = function (event) {
              //        imgtag.src = event.target.result;
              //    };

              //    reader.readAsDataURL(selectedFile);
              //}
              $("#seat").on('paste keypress',function () {

                  $(this).attr('val', '');

              });

              $("#Idcontactno").on('paste keypress', (function (e) {
                  var key;
                  if (e.which) {
                      key = String.fromCharCode(e.which);
                  } else {
                      key = e.originalEvent.clipboardData.getData('Text');
                  }
                  var value = $(this).val() + key;
                  if (!/^[0-9]{1,15}$/.test(value)) {
                      e.preventDefault();
                  }
              }));


              
              $("#seat").on('paste keypress', (function (e) {
                  var key;
                  if (e.which) {
                      key = String.fromCharCode(e.which);
                  } else {
                      key = e.originalEvent.clipboardData.getData('Text');
                  }
                  var value = $(this).val() + key;

                  if (!/^[0-9]{1,999}$/.test(value)) {
                      e.preventDefault();
                  }


              }));
              $("#trip").on('paste keypress', (function (e) {
                  var key;
                  if (e.which) {
                      key = String.fromCharCode(e.which);
                  } else {
                      key = e.originalEvent.clipboardData.getData('Text');
                  }
                  var value = $(this).val() + key;
                  if (!/^[0-9]{1,999}$/.test(value)) {
                      e.preventDefault();
                  }


              }));
           

              function Save() {

               
             
               
                  var checkValidation = true;

                  if (document.getElementById('vName').value == 0 || document.getElementById('type').value == 0 || document.getElementById('Brand').value == 0 || document.getElementById('model').value == 0 || document.getElementById('Year').value == 0 || document.getElementById('seat').value == 0 || document.getElementById('make').value == 0) {
                      if ($("#vName").val() == 0) {
                          document.getElementById("s1").innerHTML = "Enter Vehicle No";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s1").innerHTML = "";
                      }

                      if ($("#type").val() == 0) {
                          document.getElementById("s2").innerHTML = "Select Vehicle Type";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s2").innerHTML = "";
                      }

                      if ($("#Brand").val() == 0) {
                          document.getElementById("s5").innerHTML = "Select Brand";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s5").innerHTML = "";
                      }
                      if ($("#model").val() == 0) {
                          document.getElementById("s6").innerHTML = "Select Model";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s6").innerHTML = "";
                      }
                      if ($("#Year").val() == 0) {
                          document.getElementById("s7").innerHTML = "Select Year";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s7").innerHTML = "";
                      }
                      if ($("#seat").val() == 0) {
                          document.getElementById("s8").innerHTML = "Select seat";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s8").innerHTML = "";
                      }
                      if ($("#make").val() == 0) {
                          document.getElementById("s11").innerHTML = "Enter Make Name";
                          checkValidation = false;
                      }
                      else {
                          document.getElementById("s11").innerHTML = "";
                      }

                  }
                  var pat1 = /^\d{10}$/;

                  var phoneno = document.getElementById("Idcontactno");



                  if (!pat1.test(phoneno.value)) {

                      document.getElementById("s3").innerHTML = "Enter 10 digit phonenumber";
                      checkValidation = false;

                  }

                  else {
                      document.getElementById("s3").innerHTML = "";
                  }

                 

                  if (checkValidation == true) {

                      var values =
                   {

                       "Vehicle_No": $("#vName").val(),
                       "VehicleType": $("#type").val(),
                       "Contact_No": $("#Idcontactno").val(),
                       "Remarks": $("#mark").val(),
                       "VehicleBrand": $("#Brand").val(),
                       "VehicleModel": $("#model").val(),
                       "VehicleMake": $("#make").val(),
                       "Model_Year": $("#Year").val(),
                       "No_of_Seat": $("#seat").val(),
                       "Trip": $("#trip").val(),
                       "VehicleType_Id": $("#type").find("option:selected").text(),
                       "VehicleBrand_Id": $("#Brand").find("option:selected").text(),
                       "VehicleModel_Id": $("#model").find("option:selected").text(),
                       "Vehicle_Photo": $("#file").val()
                   }
                      var opts =
                  {
                      "closeButton": true,
                      "debug": false,
                      "positionClass": "toast-top-right",
                      "toastClass": "White",
                      "onclick": null,
                      "showDuration": "300",
                      "hideDuration": "1000",
                      "timeOut": "2000",
                      "extendedTimeOut": "1000",
                      "showEasing": "swing",
                      "hideEasing": "linear",
                      "showMethod": "fadeIn",
                      "hideMethod": "fadeOut"
                  }
                      $.ajax({
                          url: "../../Transportation/AddVehicle/",
                          type: 'POST',
                          cache: false,
                          data: values,
                          traditional: true,
                          global: false,
                          success: function (result) {
                              if (result == "Success1") {
                                  $('#portlet-config1').appendTo("body").modal({ backdrop: 'static', keyboard: false });
                                  toastr.success(" Vehicle Added successfully", opts);
                                  setTimeout(function () { location.reload(); }, 1000);
                              }
                              if (result == "Warning") {
                                  toastr.warning("Already Exist", opts);
                              }
                          }
                      });
                  }

                  }

            
                      </script>
     
    
    </body>
    </html>
  

