@using Microsoft.SqlServer.Server
@model IEnumerable<DSRCManagementSystem.Models.OrgPrecedence>
@{          
     
    var grid = new WebGrid(source: Model, canPage: false, canSort: false);
}
<table class="table table-bordered datatable" id="tblorgChart">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.DepartmentName)*@
                @Html.Raw((string)ViewBag.Lbl_department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecedenceOrder)
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpID)
                @Html.HiddenFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecedenceOrder)
            </td>
            <td>
                <a>
                    <button type="button" class="btn btn-info btn-icon icon-left" onclick='EditPrecedenceOrder("@item.UserID")'>
                        <i class="fa fa-edit"></i>Edit
                    </button>
                </a>
            </td>
            <td>
                <a>
                    <button type="button" class="btn btn-red btn-icon icon-left" onclick='DeletePrecedenceOrder("@item.UserID")'>
                        <i class="entypo-cancel"></i>Delete
                    </button>
                </a>
            </td>
        </tr>
    }
</table>
