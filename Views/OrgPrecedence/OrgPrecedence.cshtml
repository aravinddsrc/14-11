        function CreatePrecedenceOrder() {
            var toastrOptions = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "toastClass": "White",
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr.clear("", toastrOptions);
            $.ajax({ url: "../../OrgPrecedence/CreatePrecedence/",
                type: 'GET', cache: false,
                success: function (result) {
                    $('#PartialSection').html(result);
                    $('#portlet-config').appendTo("body").modal({backdrop: 'static', keyboard : false});
                }
            });
        }

        function GridHeaderStructure() {
            var table = $("#tblorgChart").dataTable({
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "sPaginationType": "bootstrap",
                "columnDefs": [
                    { "width": "15%", "targets": 0 }, { "width": "28%", "targets": 1 }, { "width": "20%", "targets": 2 }, { "width": "25%", "targets": 3 },
                    { "width": "5%", bSortable: false, "targets": 4 }, { "width": "10%", bSortable: false, "targets": 5 }
                ]
            });

            $(".dataTables_wrapper select").select2({
                minimumResultsForSearch: -1
            });
            $('thead>tr>th').css('text-align', 'center');
        }

        function ReloadGrid() {
            var tables = $.fn.dataTable.fnTables(true);
            $(tables).each(function () {
                $(this).dataTable().fnClearTable();
                $(this).dataTable().fnDestroy();
            });

            $.ajax({
                url: "../../OrgPrecedence/OrgPrecedence/",
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#PrecedenceOrderGrid').html(result);
                    GridHeaderStructure();
                }
            });
        }

        function DeletePrecedenceOrder(uid) {
            var toastrOptions = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "toastClass": "White",
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr.clear("", toastrOptions);
            bootbox.confirm("Are you sure you want to delete ?", function (result) {
                if (result) {
                    var opts = {
                        "closeButton": true,
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "toastClass": "White",
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "3000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    //Logic to delete the itemalert
                    $.ajax({ url: "../../OrgPrecedence/DeletePrecedence/" + uid,
                        type: 'GET', cache: false,
                        success: function (result) {
                            if (result.Result === "Success") {
                                ReloadGrid();
                                    toastr.success("Precedence order for user has been deleted successfully", opts);
                            }
                        }
                    });
                }
            });
        }

        function EditPrecedenceOrder(uid) {
            var toastrOptions = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "toastClass": "White",
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr.clear("", toastrOptions);
            $.ajax({ url: "../../OrgPrecedence/EditPrecedence/" + uid,
                type: 'GET', cache: false,
                success: function (result) {
                    $('#PartialSection').html(result);
                    $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });                    
                }
            });
        }


    </script>
