<script>

    $(document).ready(function () {


    });

    function SaveDetails() {
      

        

        var Category = $("#CategoryID").val();
        if (Category == null) {
            
                document.getElementById("dep").innerHTML = "Select the Category";  
         
        }
        else {
            var Category = $("#CategoryID").val();
            

            

            var values =
                         {
                             
                             "CategoryName": $("#CategoryID").val().toString(),
                         }
            var opts =
                        {
                            "closeButton": true,
                            "debug": false,
                            "positionClass": "toast-top-right",
                            "toastClass": "White",
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "2000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
            $.ajax({
               
                url: "../../AssignCheckList/Assign/",
                type: 'POST',
                cache: false,
                data: values,
                traditional: true,
                global: false,
                success: function (result) {

                    if (result.Result === "Success") {

                        $("#portlet-config").modal('hide');
                        toastr.success("Category saved successfully", opts);
                        setTimeout(function () { location.reload(); }, 1000);
                    }
                    else {
                        $("#portlet-config").modal('hide');
                        toastr.success("Category not saved successfully", opts);
                        setTimeout(function () { location.reload(); }, 1000);
                    }

                }

            });

        }

    }


    $(function () {
        $(".modal-body select").select2({
            minimumResultsForSearch: -1
        });

        $("#CategoryID").select2();



    });

</script>

