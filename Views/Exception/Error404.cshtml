<div class="main-content" style="min-height: 1042px;">
    @if (Model.ErrorCode == 404)
    {
        <div class="page-error-404">
            <div class="error-symbol">
                <i class="entypo-attention"></i>
            </div>
            <div class="error-text">
                <h2>
                    404</h2>
                <p>
                    Page not found!</p>
            </div>
            
            <div class="error-text">
                
                <br/>
                <br/>
                Actually, the page you are looking for does not exist.
                <div class="input-group minimal">
                <br />
                <br />
                  <a href="~/User/Login">
							 Back To Home </a>
                    
                </div>
            </div>
        </div>
    }
    else
    {
        
        <div class="page-error-404">
            <div class="error-symbol">
                <i class="entypo-attention"></i>
            </div>
            <div class="error-text">
                <h2>
                    500</h2>
                <p>
                    Oops! Something went wrong.</p>
            </div>
           
            <div class="error-text">
                 
                    <br />
                    <br />
                    <p>
                        We are fixing it!<br />
                        Please come back in a while.<br />
                        <br />
                    </p>
                    
                  <a href="~/User/Login">
							 Back To Home </a>
                </div>
        </div>
        
        
    }
</div>
