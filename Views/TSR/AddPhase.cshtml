        <script type="text/javascript">

            jQuery(document).ready(function ($) {


                
                var columnDefs;
            

                $("#tblMeeting").dataTable({
                    "sPaginationType": "bootstrap",
                    "aLengthMenu": [[10, 15, 20, 25, -1], [10, 15, 20, 25, "All"]],
                    "aaSorting": [],
                    "columnDefs": [{ bSortable: false, 'aTargets': [7] }, { bSortable: false, 'aTargets': [8] }]
                });
                $(".dataTables_wrapper select").select2({
                    minimumResultsForSearch: -1
                });
                $('thead>tr>th').css('text-align', 'center');
            });

            function AssignNewTask() {
               
                $.ajax({

                    url: "../../AssignTask/AssignNewTask/",

                    type: 'GET', cache: false,
                    success: function (result) {
                      
                        $('#PartialSection').html(result);
                        $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });

                    }

                });


            }

            function AlreadyTask() {

                toastr.warning("Task is already assigned for this phase. Delete the task first");
            }

            function EditAttendee(Id) {
                $.ajax({
                    url: "../../TSR/AddNewPhaseEdit/",
                    type: 'GET',
                    cache: false,
                    data: { "Id": Id },
                    success: function (result) {
                        $('#PartialSection').html(result);
                        $('#portlet-config').appendTo("body").modal('show');

                    }

                });
            }

            function AddMeeting() {
             
                $.ajax({
                    url: "../../TSR/AddNewPhase/",
                    type: 'GET', cache: false,
                    success: function (result) {
                        $('#PartialSection').html(result);
                        $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });

                    }

                });

            }
           

            function AddTask() {


                $.ajax({
                    url: "../../AddTask/AddTask/",
                    type: 'GET', cache: false,
                    success: function (result) {
                        $('#PartialSection').html(result);
                        $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });

                    }

                });

            }




            function Dashboard() {

                window.location.href = "/Leave/DashBoard";

            }




            function DeletePhase(Phaseid) {
             //   alert("++++");
                bootbox.confirm("Are you sure want to delete ?", function (conform) {
                    if (conform) {
                        $.ajax({ url: "../TSR/DeletePhase/",
                            type: 'POST', cache: false,
                            data: { PhaseId: Phaseid },
                            success: function (result) {
                                if (result.Result === "Success") {
                                    toastr.success(" Phase  deleted successfully!");
                                    setTimeout(function () { location.reload(); }, 1000);
                                }

                            }
                        });
                    }
                });
            }


        </script>
