@model DSRCManagementSystem.ManageServer
{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddServer</title>
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: #f0f0f1;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h4 class="modal-title">
                Add Server</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">
                            Location Name</label>
                        <label class="control-label" style="color: red;">
                            *</label>
                        @Html.DropDownListFor(m => m.LocationId, ViewBag.location as SelectList, new { @id = "LocationName", @class = "form-control" })
                        <span id="employee"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.RackNo, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.RackNo, new { @id = "RackNo", @name = "RackNo", @class = "form-control", @autocomplete = "off", @maxlength = 4 })
                        @Html.ValidationMessageFor(X => X.RackNo, null, new { @style = "color:red" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.AssetId, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.AssetId, new { @id = "Asset", @name = "HardwaresId", @class = "form-control", @autocomplete = "off", @maxlength = 5 })
                        @Html.ValidationMessageFor(X => X.AssetId, null, new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.MachineName, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.MachineName, new { @id = "MachineName", @name = "MachineName", @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                        @Html.ValidationMessageFor(X => X.MachineName, null, new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.ServerMake, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.ServerMake, new { @id = "ServerMake", @name = "ServerMake", @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                        @Html.ValidationMessageFor(X => X.ServerMake, null, new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Model, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.Model, new { @id = "Model", @name = "Model", @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                        @Html.ValidationMessageFor(X => X.Model, null, new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Processor, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.Processor, new { @id = "Processor", @name = "Processor", @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                        @Html.ValidationMessageFor(X => X.Processor, null, new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Memory, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(x => x.Memory, new { @id = "Memory", @name = "Memory", @class = "form-control", @autocomplete = "off", @maxlength = 50 })
                        @Html.ValidationMessageFor(X => X.Memory, null, new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
