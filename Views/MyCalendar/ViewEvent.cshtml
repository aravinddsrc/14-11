@model DSRCManagementSystem.Models.CalendarEventModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditEvent</title>
    <link href="../../Content/Template/js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css"
          rel="stylesheet" type="text/css" />
    <link href="../../Content/Template/css/font-icons/entypo/css/entypo.css" rel="stylesheet"
          type="text/css" />
    <link href="../../Content/Template/css/font-icons/entypo/css/animation.css" rel="stylesheet"
          type="text/css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic"
          id="style-resource-4" />

    <link href="../../Content/Template/css/custom.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/Template/js/select2/select2-bootstrap.css" rel="stylesheet"
          type="text/css" />
    <link href="../../Content/Template/js/select2/select2.css" rel="stylesheet" type="text/css" />

    <script src="~/Content/Plugins/bootstrap-datetimepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <link href="~/Content/Plugins/bootstrap-datetimepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <script src="../../Content/Template/js/select2/select2.min.js" type="text/javascript"></script>
    @*   Timepicker scripts*@
    <link href="../../Content/jquery-timepicker-master/jquery.timepicker.css" rel="stylesheet"
          type="text/css" />
    <script src="../../Content/jquery-timepicker-master/jquery.timepicker.js" type="text/javascript"></script>
    <script src="../../Content/jquery-timepicker-master/jquery.timepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
    <link href="../../Content/Plugins/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css"
          rel="stylesheet" type="text/css" />
    <style>
      .dropdown-menu {
    background-color: white;
}    
</style>
    @*   Timepicker scripts*@
    <script src="../../Content/JS/ToasterAlert.js" type="text/javascript"></script>
    <link href="~/Content/ColorPicker/spectrum.css" rel="stylesheet" />
    <script src="~/Content/ColorPicker/spectrum.js" type="text/javascript"></script>
    <script type="text/javascript">
    $("#IdUsers").select2();

    $("#IdColorCode").spectrum({
        color: document.getElementById('IdColorCode').value
    });
    </script>
</head>
<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: #f0f0f1;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×
            </button>
            <h4 class="modal-title">
                Edit Event
            </h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(e => e.EventName, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(e => e.EventName, new { @class = "form-control", @id = "IdEventName", @disabled = "disabled" })
                        @Html.HiddenFor(e => e.EventId, new { @id = "EventId" })
                        @Html.ValidationMessageFor(e => e.EventName, " ", new { @style = "color:red" })
                        <span id="spanEventName" style="color:Red"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(e => e.EventDescription, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(e => e.EventDescription, new { @class = "form-control", @id = "IdEventDesc", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.EventDescription, " ", new { @style = "color:red" })
                        <span id="spanEventDesc" style="color:Red"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(e => e.StartDate, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(e => e.StartDate, new { @class = "form-control datetimepicker", @id = "IdStartDate", @data_start_date = "d", @autocomplete = "off", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.StartDate, " ", new { @style = "color:red" })
                        <span id="spanstartdate" style="color:Red"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(e => e.EndDate, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(e => e.EndDate, new { @class = "form-control datetimepicker", @id = "IdEndDate", @autocomplete = "off", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.EndDate, " ", new { @style = "color:red" })
                        <span id="spanenddate" style="color:Red"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group StartTime">
                        @Html.LabelFor(e => e.StartTime, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(e => e.StartTime, new { @class = "form-control", @id = "IdStartTime", @autocomplete = "off", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.StartTime, " ", new { @style = "color:red" })
                        <span id="spanstarttime" style="color:Red"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group EndTime">
                        @Html.LabelFor(e => e.EndTime, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.TextBoxFor(e => e.EndTime, new { @class = "form-control", @id = "IdEndTime", @autocomplete = "off", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.EndTime, " ", new { @style = "color:red" })
                        <span id="spanendtime" style="color:Red"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(e => e.ColorCode, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })<br />
                        @Html.TextBoxFor(e => e.ColorCode, new { @class = "form-control", @id = "IdColorCode", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.ColorCode, " ", new { @style = "color:red" })
                        <span id="spancolorcode" style="color:Red"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(e => e.Members, new { @class = "control-label" })
                        @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                        @Html.DropDownList("Userid", ViewBag.Members as MultiSelectList, new { @id = "IdUsers", @class = "select2-container select2-container-multi select2 visible", @multiple = "multiple", @disabled = "disabled" })
                        @Html.ValidationMessageFor(e => e.Members, " ", new { @style = "color:red" })
                        <span id="spanusers" style="color:Red"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
    <div class="modal fade in" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="tools">
                <div id="PartialSection">
                </div>
            </div>
        </div>
    </div>
</body>
</html>
