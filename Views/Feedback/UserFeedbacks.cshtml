@model DSRCManagementSystem.Models.UserFeedback
@{
    ViewBag.Title = "User Feedbacks";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section AddToHead{
<style>
    textarea
    {
        resize: none;
    }
</style>
    }
<style>
     .dropdown-menu {
    background-color:white;
}
        </style>
@*<ol class="breadcrumb bc-3">
    <li class="active">Feedback</li>
    <li class="active"><strong>Send Feedback</strong></li>
</ol>*@
     <p>
        <a href="@Url.Action("UserFeedbacks","Feedback")"style="color:black ">
            Feedback
        </a>
          &#160;<img src="~/Images/righ-arrow.png" />&#160;
        <b>Send Feedback</b>
    </p>    
<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
    </div>
    <div class="col-md-6" style="text-align: right">
        @Html.Label("*", new { @style = "color:#FF0000" }) Required field(s)
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-shadow" data-collapsed="0">
            <div class="panel-heading">
                <div class="panel-title" color="White">
                    Send Feedback</div>
            </div>
            <br />
            <div class="panel-body">
                @using (Html.BeginForm("UserFeedbacks", "Feedback", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Feedback)
                                @Html.Label("  *", new { @style = "color:red;font-weight:bold;" })
                                @Html.TextAreaFor(x => x.Feedback, new { @id = "feedback", @name = "feedback", @class = "form-control", @style = "Height: 275px", @placeholder = "Enter feedback", @maxlength = "number" })
                                @Html.ValidationMessageFor(x => x.Feedback, "", new { @style = "color:red" })
                                <br />
                                <div style="text-align: right">
                                    <button type="submit" class="btn btn-info" >
                                        Send Feedback</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@if (Model.StatusMessage != null)
{
    <script type="text/javascript">
        $("#feedback").empty();
        toastr.success("Feedback sent successfully");

    </script>
}
