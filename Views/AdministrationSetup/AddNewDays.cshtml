@model DSRCManagementSystem.Models.ExtraHolidays

@{
  
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProjectMeeting</title>

    <link href="../../Content/Template/js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css"
        rel="stylesheet" type="text/css" />
    <link href="../../Content/Template/css/font-icons/entypo/css/entypo.css" rel="stylesheet"
        type="text/css" />
    <link href="../../Content/Template/css/font-icons/entypo/css/animation.css" rel="stylesheet"
        type="text/css" />
         <script src="../../Content/Plugins/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic"
        id="style-resource-4" />
         <script src="../../Content/Template/js/select2/select2.min.js" type="text/javascript"></script>
    <link href="../../Content/Template/css/neon.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/Template/css/custom.css" rel="stylesheet" type="text/css" /> 
    <script src="../../Content/Plugins/bootstrap-datetimepicker/js/en-gb.js" type="text/javascript"></script>
    <script src="../../Content/Plugins/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
    <script src="../../Content/Plugins/bootstrap-datetimepicker/js/bootstrap-datepicker.js"
        type="text/javascript"></script>
    <link href="../../Content/Plugins/bootstrap-datetimepicker/css/bootstrap-datepicker.css"
        rel="stylesheet" type="text/css" />


</head>

    <style>
     .dropdown-menu {
    background-color:white;
}
        </style>

<body>
    <div class="modal-content">
        <div class="modal-header" style="background-color: #f0f0f1;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h4 class="modal-title">
             Add  Holiday</h4>
        </div>
 
     <div class="modal-body">

            @using (Html.BeginForm("AddNewDays", "AdministrationSetup", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-12" style="text-align: right">
                        @Html.Label("*", new { @style = "color:#FF0000" }) Required field(s)
                    </div>
                </div>
                
                 <div class="row" >

                   <div class="col-md-6">
                   <div class="form-group">
                @Html.Label("Zone", new { @class = "control-label" })
                @Html.Label("*", new { @style = "color:#FF0000" })
                @Html.DropDownList("Id3", ViewBag.Purpose as SelectList, "--Select--", new { @id = "TimeZone", @class = "select2-container select2-container-multi select2 visible" })
                <span id="span_ID6" style="color: Red;"></span>
                   </div>
                </div> 
             
                
              
              <div class="col-md-6">  
                     <div class="form-group">
                      @Html.Label("Date", new { @class = "control-label" })
                      @Html.Label("*", new { @style = "color:#FF0000" })
                      @Html.TextBoxFor(x => x.Date, new { @name = "Date", @id = "scheduledate", @class = "form-control datetimepicker" })               
                     <span id="span_ID7" style="color: Red;"></span>
                      </div>
                      </div>
                    
</div>
                 
                 
                
                 <div class="row">
                   
                    <div class="col-md-6">  
                     <div class="form-group">
                      @Html.Label("Entered By", new { @class = "control-label" })    
                      @Html.Label("*", new { @style = "color:#FF0000" })              
                      @Html.TextBoxFor(x => x.EnteredBy, new { @name = "EnteredBy", @id = "EnteredBy", @class = "form-control", @disabled = "disabled" }) 
                     <span id="span_ID8" style="color: Red;"></span>
                      </div>
                      </div>
                    

                    <div class="col-md-6">  
                     <div class="form-group">
                       @Html.Label("Approved By", new { @class = "control-label" })
                       @Html.Label("*", new { @style = "color:#FF0000" })   
                       @Html.DropDownList("Id", ViewBag.Email3 as MultiSelectList, new { @id = "ApprovedBy", @class = "select2-container select2-container-multi select2 visible", @multiple = "multiple" })
                          <span id="span_ID9" style="color: Red;"></span>
                      </div>
                      </div>

                      </div>
                                 
                  <div class="row">
                   
                    <div class="col-md-6">  
                     <div class="form-group">
                      @Html.Label("Holiday Name", new { @class = "control-label" })    
                      @Html.Label("*", new { @style = "color:#FF0000" })              
                      @Html.TextBoxFor(x => x.HolidayName, new { @name = "Holiday", @id = "Holiday", @class = "form-control" }) 
                     <span id="span_ID10" style="color: Red;"></span>
                      </div>
                      </div>

                     <div class="col-md-6">  
                     <div class="form-group">
                     
                      </div>
                      </div>

                      </div>
            }   

             </div>   
           
             <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Cancel
            </button>
            <button type="button" id="btnAdd" class="btn btn-info"  onclick='AddNewMeeting()' >
                Save
            </button>
        </div>
      </div>
                
     <div class="modal fade in" id="portlet-config1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="tools">
                <div id="PartialSection">
                    <div id="LoaderContent" style="height: 100%;">
                        <img src="../../Content/Template/images/finalloader.GIF" style="margin-left: 43%;
                            margin-top: 40%;" />
                    </div>
                </div>
            </div>
        </div>
    </div> 

    
 
            <script src="../../Content/Template/js/select2/select2.min.js" type="text/javascript"></script>   
             <script src="../../Content/JS/ToasterAlert.js" type="text/javascript"></script>
          <script type="text/javascript">
              $(function () {
                 $(".modal-body select").select2({
                     minimumResultsForSearch: -1
                 });
              });

              $(".datetimepicker").datepicker({
                  format: 'dd-mm-yyyy',
                  //todayHighlight: true,
                   startDate: '+1d',
                 //  daysOfWeekDisabled: [0, 6],
                    autoclose: true
       

              });


                $(document).ready(function () {

                    $('#Holiday').keypress(function (e) {
                        var regex = new RegExp("^[a-zA-Z\\s]+$");
                        var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
                        if (regex.test(str)) {

                            return true;
                        }

                        $("#span_ID10").html("Enter Valid Holiday").show();
                        return false;
                    });
                });






                function AddNewMeeting() {





                    if (document.getElementById('TimeZone').value == '' || document.getElementById('scheduledate').value == '' || document.getElementById('EnteredBy').value == '' || document.getElementById('ApprovedBy').value == '' || document.getElementById('Holiday').value == '')
                     {

                      if (document.getElementById('TimeZone').value == '') {
                          document.getElementById("span_ID6").innerHTML = "Please Select The Zone";
                      }
                      else
                       {
                          document.getElementById("span_ID6").innerHTML = "";
                      }
                      if (document.getElementById('scheduledate').value == '') 
                      {
                          document.getElementById("span_ID7").innerHTML = "Please Select The Holiday Date";
                      }
                      else 
                      {
                          document.getElementById("span_ID7").innerHTML = "";

                      }
                      if (document.getElementById('EnteredBy').value == '') 
                      {
                          document.getElementById("span_ID8").innerHTML = "Please Enter Your Name ";
                      }
                      else 
                      {
                          document.getElementById("span_ID8").innerHTML = "";

                      }

                      if (document.getElementById('ApprovedBy').value == '') 
                      {
                          document.getElementById("span_ID9").innerHTML = "Please Enter  Approved By";
                      }
                      else 
                      {
                          document.getElementById("span_ID9").innerHTML = "";
                      }

                      if (document.getElementById('Holiday').value == '') 
                      {
                          document.getElementById("span_ID10").innerHTML = "Please Enter Holiday Name ";
                      }
                      else
                       {
                          document.getElementById("span_ID10").innerHTML = "";
                      }
                  }




                  else {

                      var values =
                           {
                               "ZoneName": $("#TimeZone").find("option:selected").text(),
                               "Date": $("#scheduledate").val(),
                               "EnteredBy": $("#EnteredBy").val(),
                               "ApprovedBy": $("#ApprovedBy").val().toString(),
                               "HolidayName":$("#Holiday").val()
                           }
                      var opts =
                       {
                           "closeButton": true,
                           "debug": false,
                           "positionClass": "toast-top-right",
                           "toastClass": "White",
                           "onclick": null,
                           "showDuration": "300",
                           "hideDuration": "1000",
                           "timeOut": "2000",
                           "extendedTimeOut": "1000",
                           "showEasing": "swing",
                           "hideEasing": "linear",
                           "showMethod": "fadeIn",
                           "hideMethod": "fadeOut"
                       }

                      $.ajax({
                          url: "../../AdministrationSetup/AddNewDays/",
                          type: 'POST',
                          cache: false,
                          data: values,
                          traditional: true,
                          global: false,
                          success: function (result) {

                              if (result.Result === "Success") {


                                  toastr.success(" Holidday  added successfully", opts);
                                  setTimeout(function () { location.reload(); }, 1000);

                              }

                              if (result.Result === "Already") {

                                  toastr.warning("Holiday  updated  successfully", opts);
                                 


                              }


                          }

                      });

                  }

              }
         
          </script>
                
       </body>
             </html>