              success: function (result) {
                    $("input[type=checkbox]").attr('checked', false);
                    if (result.length) {
                        $.each(result, function (i, val) {
                            var childnode = result[i].PageModuleId != null ? result[i].FunctionId + "," + result[i].PageModuleId : result[i].FunctionId;
