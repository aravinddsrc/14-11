        function AddHoliday() {
        
        var year = (new Date).getFullYear();
         var toastrOptions = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "toastClass": "White",
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr.clear("", toastrOptions); 
            
            $.ajax({
                url: "../../Leave/CreateHoliday/",
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#PartialSection').html(result);
                    $('#portlet-config').appendTo("body").modal({ backdrop: 'static', keyboard: false });
                    $(".datetimepicker").datepicker({
                        format: 'dd/mm/yyyy',
                        todayHighlight: true,
                        startDate: new Date(year, 0, 1),
                        endDate: new Date((year+1), 11, 31),
                        autoclose: true
                    }).on('changeDate', function(e){
                                    
                    });
                }
            });
        }

        function EditHoliday(holidayId) {
        var year = (new Date).getFullYear();
         var toastrOptions = {    
                        "closeButton": true,
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "toastClass": "White",
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"                                                    
                }
                 toastr.clear("", toastrOptions);
            $.ajax({
                url: "../../Leave/EditHoliday/",
                type: 'GET',
                cache: false,
                data: { holidayId: holidayId },
                success: function (result) {
                    $('#PartialSection').html(result);
                    $('#portlet-config').appendTo("body").modal({ backdrop: 'static',
                        keyboard: false
                    });
                    $(".datetimepicker").datepicker({
                        format: 'dd/mm/yyyy',
                        todayHighlight: true,
                        startDate: new Date(year, 0, 1),
                        endDate: new Date((year+1), 11, 31),
                        autoclose: true
                    }).on('changeDate', function(e){
                                    $.ajax({
                url: "../../Leave/IsHolidayExists",
                type: 'POST',
                cache: false,
                data: { 'holiday': $('input#Date').val() },
                success: function (result) {
                    if (result.Result === false) {
                        document.getElementById("Date_ID").innerHTML = "";
                        submitForm = true;
                    }
                    else {
                        document.getElementById("Date_ID").innerHTML = "*Holiday already exists";
                        submitForm = false;
                    }
                }
            });
                    });
                }
            });
        }

        function DeleteHoliday(holidayId) {
         var toastrOptions = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "toastClass": "White",
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr.clear("", toastrOptions); 
            bootbox.confirm("Are you sure you want to delete this holiday?", function (result) {
                if (result) {
                    var toastrOptions = {
                        "closeButton": true,
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "toastClass": "White",
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    var values =
                    {
                        "holidayId": holidayId,
                        "submittingUserId": @Session["UserId"]
                    };
                      var toastrOptions = {    
                        "closeButton": true,
                        "debug": false,
                        "positionClass": "toast-top-right",
                        "toastClass": "White",
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"                                                    
                }
                 toastr.clear("", toastrOptions);
                    $.ajax({
                        url: "../../Leave/DeleteHoliday/",
                        type: 'POST',
                        cache: false,
                        data: values,
                        success: function (result) {
                            if (result.Result === "Success") {                              
                                ReloadGrid();
                                toastr.success("The holiday has been deleted successfully", toastrOptions);
                            }
                            if (result.Result === "Failure") {                              
                                toastr.success(result.Message, toastrOptions);
                            }
                        }
                    });
                }
            });
        }

        function ReloadGrid() {
            var tables = $.fn.dataTable.fnTables(true);

            $(tables).each(function () {
                $(this).dataTable().fnClearTable();
                $(this).dataTable().fnDestroy();
            });

            $.ajax({
                url: "../../Leave/Holiday/",
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#holidayGrid').html(result);
                    SetupGrid();
                }
            });
        }

        function SetupGrid() {
            $("#tblHoliday").dataTable({
                "sPaginationType": "bootstrap",
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": false,
                "bAutoWidth": false,
                "aoColumns": [{ sWidth: "10%" }, { sWidth: "30%" }, { sWidth: "30%" }, { sWidth: "5%", bSortable: false }, { sWidth: "5%", bSortable: false}]
            });
            $(".dataTables_wrapper select").select2({
                minimumResultsForSearch: -1
            });
            $('thead>tr>th').css('text-align', 'center');
        }
    </script>
}
