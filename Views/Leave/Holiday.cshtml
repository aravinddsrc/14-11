    <script src="../../Content/JS/ToasterAlert.js" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            SetupGrid();
            $('.img-circle').click(function() {
                $('.img-circle').parent().parent().toggleClass('open');
            });
