@model IEnumerable<DSRCManagementSystem.Models.Enrollment>
@{
    Layout = null;
}
<style>
    .num a
    {
        text-decoration: underline;
    }
</style>

@{
   /// int SNO = 1;
    //int sno = 1;
    int SNo = 1;
}

@*<div class="container">*@
<div class="row">
   
            <div class="col-md-12">
             <ol class="breadcrumb bc-3">
           <li>Learning and Development</li>
        <li class="active"><strong>Current Enrollment</strong></li>
    </ol>  
                    <div class="panel panel-default panel-shadow" data-collapsed="0">
                        <div class="panel-heading">
                            <div class="panel-title" color="White">
                               Current Enrollment</div>
                        </div>
                        <div class="panel-body">
                            <div class="clear">
                            </div>
                            <br />
                                @using (Html.BeginForm("Enrollment", "LDR", FormMethod.Post))
                                { 
                            <table class="table table-bordered datatable" id="tblProjects3">
                                <thead>
                                    <tr>
                                       <th style="text-align:center;">
                                        S.No
                                    </th>
                                    <th>
                                        @Html.DisplayName("Training Name")
                                    </th>
                                     <th >
                                        @Html.DisplayName("Training Id")
                                    </th>
                                     <th >
                                         @Html.DisplayName("Registered On")
                                    </th>
                                    <th >
                                        @Html.DisplayName("Status")
                                    </th>
                                    </tr>
                                </thead>
                               @{
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td style="text-align: center">
                                            @(SNo++)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.TrainingName)
                                        </td>
                                        <td style="text-align: center;">
                                            @Html.DisplayFor(modelitem => item.TrainingId)
                                        </td>
                                         @if(item.RegOn.HasValue)
                                         {
                                      <td>
                                       @item.RegOn.Value.ToString("dd/MM/yyyy")
                                       </td>
                                         }
                                         @* <td>
                                        @Html.DisplayFor(modelitem => item.RegOn.Value.ToString("dd/MM/yyyy"))
                                        </td>*@
                                        <td>
                                           @Html.DisplayFor(modelitem => item.Status)
                                        </td>
                                      
                                    </tr>
                                    }
                                }
                            </table>
                                }
                        </div>
                    </div>
                </div>
        
</div>




