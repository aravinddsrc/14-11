            <script src="../../Content/Template/js/select2/select2.min.js" type="text/javascript"></script>   
             <script src="../../Content/JS/ToasterAlert.js" type="text/javascript"></script>
          <script type="text/javascript">
              $(function () {
                 $(".modal-body select").select2({
                     minimumResultsForSearch: -1
                 });
              });

              $(".datetimepicker").datepicker({
                  format: 'dd-mm-yyyy',           
                   //startDate: '+1d'
              });


              $(document).ready(function () {
                  alert("----");
                    $("#ExpenditureAmount").on('paste keypress', (function (e) {
                        var key;
                        if (e.which) {
                            key = String.fromCharCode(e.which);
                        } else {
                            key = e.originalEvent.clipboardData.getData('Text');
                        }
                        var value = $(this).val() + key;
                        if (!/^[0-9]{1,999}$/.test(value)) {
                            e.preventDefault();
                        }
                    }));

                });






                function AddNewMeeting() {
                    alert("+++++");
                    if (document.getElementById('ID').value == '' || document.getElementById('scheduledate').value == '' || document.getElementById('EnteredDate').value == '' || document.getElementById('ExpenditureAmount').value == '')
                     {

                      if (document.getElementById('ID').value == '') {
                          document.getElementById("span_ID12").innerHTML = "Enter the description";
                      }
                      else
                       {
                          document.getElementById("span_ID12").innerHTML = "";
                      }
                      if (document.getElementById('scheduledate').value == '') 
                      {
                          document.getElementById("span_ID7").innerHTML = "Select  income date";
                      }
                      else 
                      {
                          document.getElementById("span_ID7").innerHTML = "";

                      }
                      //if (document.getElementById('EnteredDate').value == '')
                      //{
                      //    document.getElementById("span_ID8").innerHTML = " Enter Your Nam ";
                      //}
                      //else 
                      //{
                      //    document.getElementById("span_ID8").innerHTML = "";

                      //}
       

                      if (document.getElementById('ExpenditureAmount').value == '')
                      {
                          document.getElementById("span_ID10").innerHTML = " Enter income amount ";
                      }
                      else
                       {
                          document.getElementById("span_ID10").innerHTML = "";
                      }
                  }




                  else {

                      $('#portlet-config1').appendTo("body").modal({ backdrop: 'static', keyboard: false });
                      var values =
                           {
                              
                               "ScheduleDate": $("#EnteredDate").val(),
                               "ExpenseAmount": $("#ExpenditureAmount").val(),
                               "ExpenseDescription": $("#ID").val(),
                               "ExpenseDate"  : $("#scheduledate").val()
                           
                           }
                      var opts =
                       {
                           "closeButton": true,
                           "debug": false,
                           "positionClass": "toast-top-right",
                           "toastClass": "White",
                           "onclick": null,
                           "showDuration": "300",
                           "hideDuration": "1000",
                           "timeOut": "2000",
                           "extendedTimeOut": "1000",
                           "showEasing": "swing",
                           "hideEasing": "linear",
                           "showMethod": "fadeIn",
                           "hideMethod": "fadeOut"
                       }

                      $.ajax({
                          url: "../../Income/Add/",
                          type: 'POST',
                          cache: false,
                          data: values,
                          traditional: true,
                          global: false,
                          success: function (result) {

                              if (result.Result === "Success") {

                                  $("#portlet-config").modal('hide');
                                  toastr.success("Income added successfully", opts);
                                  setTimeout(function () { location.reload(); }, 1000);

                              }

                              if (result.Result === "Already") {

                                  toastr.warning("Income  Already Exist", opts);
                                 
                              }


                          }

                      });

                  }

              }
         
          </script>
                
