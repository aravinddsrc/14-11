<script src="../../Content/JS/ToasterAlert.js" type="text/javascript"></script>
<script src="../../Content/Template/js/bootstrap-datepicker.js" type="text/javascript"></script>
@{
  var count = 0;
 }

 <style>
      .dropdown-menu {
    background-color: white;
}    
