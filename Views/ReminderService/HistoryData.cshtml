    function EditMail(Id, ServiceType, SelectDate) {

        $.ajax({
            url: "../../ReminderService/AddNewEdit/",
            type: 'GET',
            cache: false,
            data: { "Id": Id, "ServiceType1": ServiceType, "SelectedDate1": SelectDate },
