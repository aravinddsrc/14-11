                var selectedItem = $(this).val();
                $.ajax({
                    cache: false,
                    type: "GET",
                    url: "../../Template/CreateTemplate/",
                    data: { "projectID": selectedItem },
                    success: function (data) {

                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert('Failed..');

                    }
                });
            });
        });
    </script>
}
